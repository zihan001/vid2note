# IBM watsonx.ai Configuration
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_PROJECT_ID=your_project_id_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# OpenAI (fallback/testing)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Storage Paths
STORAGE_ROOT=./storage
VIDEO_STORAGE=./storage/videos
TRANSCRIPT_STORAGE=./storage/transcripts
FRAME_STORAGE=./storage/frames
PDF_STORAGE=./storage/pdfs

# Database
DATABASE_URL=sqlite:///./vid2note.db

# Processing Settings
MAX_VIDEO_SIZE_MB=500
MAX_TRANSCRIPT_SIZE_MB=10
FRAME_EXTRACTION_INTERVAL=2
MAX_CONCURRENT_JOBS=3

# LLM Settings
LLM_MODEL=gpt-4o-mini
LLM_MAX_RETRIES=5
LLM_TIMEOUT_SECONDS=30
CONFIDENCE_THRESHOLD=75

# PDF Settings
PDF_MAX_IMAGES=12
PDF_IMAGE_WIDTH=1800
PDF_THUMBNAIL_WIDTH=480
